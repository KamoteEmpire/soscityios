<?xml version   ="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "gcccs.org.soscity"
    version     = "1.4">

    <name>SOS City</name>
    
    <content src="index.html"/>
    <icon src="icon.png" width="256" height="256" />
    
    <description>SOS City
    </description>
    
	<platform name="ios">
              <!-- iOS 8.0+ -->
              <!-- iPhone 6 Plus  -->
              <icon src="images/iosicon/180.png" width="180" height="180" />
              <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="images/iosicon/60.png" width="60" height="60" />
              <icon src="images/iosicon/120.png" width="120" height="120" />
              <!-- iPad -->
              <icon src="images/iosicon/76.png" width="76" height="76" />
              <icon src="images/iosicon/152.png" width="152" height="152" />
              <!-- iOS 6.1 -->
              <!-- Spotlight Icon -->
              <icon src="images/iosicon/40.png" width="40" height="40" />
              <icon src="images/iosicon/80.png" width="80" height="80" />
              <!-- iPhone / iPod Touch -->
              <icon src="images/iosicon/57.png" width="57" height="57" />
              <icon src="images/iosicon/114.png" width="114" height="114" />
              <!-- iPad -->
              <icon src="images/iosicon/72.png" width="72" height="72" />
              <icon src="images/iosicon/144.png" width="144" height="144" />
              <!-- iPhone Spotlight and Settings Icon -->
              <icon src="images/iosicon/29.png" width="29" height="29" />
              <icon src="images/iosicon/58.png" width="58" height="58" />
              <!-- iPad Spotlight and Settings Icon -->
              <icon src="images/iosicon/50.png" width="50" height="50" />
              <icon src="rimages/iosicon/100.png" width="100" height="100" />
     </platform>
   

    <!-- third party plugins -->


    <!-- core plugins -->
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.media-capture" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
	<gap:plugin name="nl.x-services.plugins.toast" />
 
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
 
    <!-- universal preferences -->
    <preference name="phonegap-version"           value="3.5.0" />         
    <preference name="target-device"              value="universal" />      <!-- all: possible values handset, tablet, or universal -->
    <!--<preference name="fullscreen"                 value="true" /> -->          <!-- all: hides the status bar at the top of the screen -->
  
   <preference name="fullscreen" value="false" />
   	<preference name="orientation" value="portrait" />
    <!-- content src="http://www.w3.org/2010/05/video/mediaevents.html" / -->
</widget>
